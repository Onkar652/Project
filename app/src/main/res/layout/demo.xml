<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="72dp"
    android:paddingEnd="72dp">

    <TextView
        android:id="@+id/tv_email_receipt_title"
        fontPath="fonts/Poppins-SemiBold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="54dp"
        android:text="xyz"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/tv_email_receipt_title"
        android:layout_marginTop="32dp"
        android:background="@drawable/baseline_emoji_transportation_24"
        android:hint="Enter email"
        android:gravity="center_vertical|left"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        android:includeFontPadding="false"
        android:textFontWeight="400"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="@color/black" />

    <TextView
        android:visibility="gone"
        android:layout_below="@+id/tv_email_receipt_title"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_input_skip"
        fontPath="fonts/Poppins-SemiBold.ttf"
        android:layout_width="116dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="Skip"
        android:textColor="@color/blue"
        android:textSize="24sp"
        tools:ignore="MissingPrefix"
        android:textFontWeight="600"/>

    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/et_email"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_gmail_suggestion"
            fontPath="fonts/Poppins-SemiBold.ttf"
            android:layout_width="211dp"
            android:layout_height="48dp"
            android:background="@drawable/baseline_contact_mail_24"
            android:gravity="center"
            android:text="Gmail Suggestion"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="MissingPrefix"
            android:textFontWeight="600"/>
        <TextView
            android:layout_marginStart="16dp"
            android:id="@+id/tv_hotmail_suggestion"
            fontPath="fonts/Poppins-SemiBold.ttf"
            android:layout_width="211dp"
            android:layout_height="48dp"
            android:background="@drawable/baseline_contact_mail_24"
            android:gravity="center"
            android:text="hotmail_suggestion"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="MissingPrefix"
            android:textFontWeight="600"/>
        <TextView
            android:layout_marginStart="16dp"
            android:id="@+id/tv_yahoo_suggestion"
            fontPath="fonts/Poppins-SemiBold.ttf"
            android:layout_width="211dp"
            android:layout_height="48dp"
            android:background="@drawable/baseline_contact_mail_24"
            android:gravity="center"
            android:text="/yahoo_suggestion"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="MissingPrefix"
            android:textFontWeight="600"/>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="54dp"
        android:id="@+id/tv_input_done"
        fontPath="fonts/Poppins-SemiBold.ttf"
        android:layout_width="440dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/baseline_info_24"
        android:gravity="center"
        android:text="done"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:ignore="MissingPrefix"
        android:textFontWeight="600"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>