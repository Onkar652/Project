<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        android:paddingRight="35dp">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Your Vehicle,"
            android:textColor="@color/tikdark"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txtsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:layout_below="@+id/textView"
            android:text="We happy you are here,Let's do this!"
            android:textColor="@color/tiklightgray"
            android:textSize="14sp" />
    </RelativeLayout>
    <!-- Make EditText -->

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/providervehicle"
        android:layout_margin="10dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <EditText
        android:id="@+id/edt_make"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/roundded_button"
        android:drawablePadding="09dp"
        android:hint="Make: Ex- Toyota"
        android:inputType="textCapWords"

        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tiklightgray"
        android:textSize="14sp" />

    <!-- Model EditText -->
    <EditText
        android:id="@+id/edt_model"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundded_button"
        android:drawablePadding="09dp"
        android:hint="Model: Ex- INNOVA"
        android:inputType="textCapWords"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tiklightgray"
        android:textSize="14sp" />

    <!-- Fuel Type Radio Buttons -->
    <RadioGroup
        android:id="@+id/radio_group_fuel_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_petrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petrol"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_diesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diesel" />

        <RadioButton
            android:id="@+id/radio_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electric" />
    </RadioGroup>

    <!-- Number of Seats -->
    <EditText
        android:id="@+id/edt_seats"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundded_button"
        android:drawablePadding="09dp"
        android:hint="Number of Seats"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tiklightgray"
        android:textSize="14sp" />

    <!-- AC or Non-AC Radio Buttons -->
    <RadioGroup
        android:id="@+id/radio_group_ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_non_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-AC" />
    </RadioGroup>

    <!-- Mileage -->
    <EditText
        android:id="@+id/edt_mileage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundded_button"
        android:drawablePadding="09dp"
        android:hint="Mileage (km/l)"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tiklightgray"
        android:textSize="14sp" />

    <!-- Rate per KM -->
    <EditText
        android:id="@+id/edt_rate_per_km"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundded_button"
        android:drawablePadding="09dp"
        android:hint="Rate per KM"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tiklightgray"
        android:textSize="14sp" />

    <!-- Year of Manufacture -->
    <EditText
        android:id="@+id/edt_year_manufacture"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundded_button"
        android:drawablePadding="09dp"
        android:hint="Year of Manufacture"
        android:inputType="number"
        android:maxLength="4"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/tiklightgray"
        android:textSize="14sp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Vehicle"
        android:textAllCaps="false" />

</LinearLayout>
